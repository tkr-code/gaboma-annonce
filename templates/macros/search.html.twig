{% macro search(form) %}
<div class="rounded pt-3 mb-3 bg-default">
    <div class="container">
        {{ form_start(form,{action:path('annonces'), attr:{
            id:'search-form'
        } }) }}
        <div class="row">
            <div class="col-lg-12">
                <div class="form-row ">
                    <div class="col-6">
                    {{ form_row(form.minPrice)}}
                    </div>
                    <div class="col-6">
                    {{ form_row(form.maxPrice)}}
                    </div>
                    <div class="col-4">
                    {{ form_row(form.category)}}
                    </div>
                    <div class="col-8">
                    {{ form_row(form.mots)}}
                    </div>
                    <div class="col-4">
                        <button class="btn w-100 btn-primary">{% trans %}Search{% endtrans %} <i class="fa fa-search-plus" aria-hidden="true"></i> </button>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endmacro %}