{% extends 'admin/base.html.twig' %}
{% import "macros/breadcrumb.html.twig" as breadcrumb %}
{% block title %}Category{% endblock %}
{% block breadcrumb %}
    {{ breadcrumb.breadcrumb('View category',[
        {
            name:'Categorys',
            path:path('category_index')
        }
    ]) }}
{% endblock %}
{% block body %}
<div class="card">
    <div class="card-header">
            <h3>Category</h3>
    </div>
    <div class="card-body">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Parent</th>
                <td>{{ category.parent.name|default('') }}</td>
            </tr>
            <tr>
                <th>Is_active</th>
                <td>{{ category.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mb-3">
            <a href="{{ path('category_index') }}" class="btn btn-dark">back to list</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-success">edit</a>
    </div>
    {{ include('admin/category/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
